{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
, "app/about/page.jsx", "app/contact/page.jsx", "app/shop/page.jsx", "app/layout.jsx", "app/page.jsx", "components/contact/contact-form.jsx", "components/contact/contact-info.jsx", "components/home/cta-section.jsx", "components/home/featured-products.jsx", "components/home/heritage-section.jsx", "components/home/hero-section.jsx", "components/home/why-garfe.jsx", "components/footer.jsx", "components/navbar.jsx", "components/theme-provider.jsx", "hooks/use-mobile.jsx"  ],
  "exclude": ["node_modules"]
}
